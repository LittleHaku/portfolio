---
import Tailwind from "../icons/Tailwind.astro";
import C from "../icons/C.astro";
import CSS from "../icons/CSS.astro";
import Django from "../icons/Django.astro";
import HTML from "../icons/HTML.astro";
import JS from "../icons/JS.astro";
import Python from "../icons/Python.astro";
import Vue from "../icons/Vue.astro";
import Java from "../icons/Java.astro";

const TAGS = {
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind,
    },
    CSS: {
        name: "CSS",
        class: "bg-[#00135c] text-white",
        icon: CSS,
    },
    HTML: {
        name: "HTML",
        class: "bg-[#4f1000] text-white",
        icon: HTML,
    },
    JS: {
        name: "JavaScript",
        class: "bg-[#5c4e00] text-white",
        icon: JS,
    },
    PYTHON: {
        name: "Python",
        class: "bg-[#003d70] text-white",
        icon: Python,
    },
    DJANGO: {
        name: "Django",
        class: "bg-[#005e3b] text-white",
        icon: Django,
    },
    VUE: {
        name: "Vue.js",
        class: "bg-[#007d45] text-white",
        icon: Vue,
    },
    JAVA: {
        name: "Java",
        class: "bg-[#014c63] text-white",
        icon: Java,
    },
    C: {
        name: "C",
        class: "bg-[#00336b] text-white",
        icon: C,
    }
};
const PROJECTS = [
    {
        title: "Project 1",
        description: "This is a project description",
        link: "",
        github: "",
        image: "https://via.placeholder.com/300",
        tags: [TAGS.TAILWIND, TAGS.C, TAGS.JAVA, TAGS.DJANGO, TAGS.VUE],
    },
];
---

<h1 class="flex gap-x-2 items-center text-4xl lg:text-6xl">
    <img
        class="size-8 lg:size-12"
        src="https://em-content.zobj.net/source/apple/391/star_2b50.png"
    />
    Projects
</h1>

{
    PROJECTS.map(({ title, description, tags, image, github, link }) => (
        <article>
            <h3 class="text-2xl text-red-300 mb-2">{title}</h3>
            <p class="text-pretty mb-4">{description}</p>
            <ul class="flex gap-x-2 flex-row">
                {tags.map((tag) => (
                    <li>
                        <span
                            class={` ${tag.class} inline-flex items-center gap-x-2 me-2 rounded-full text-xs py-1 px-2 border border-gray-500`}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/40"
                src={image}
                alt={title}
            />
        </article>
    ))
}
