<canvas
  id="particles-canvas"
  class="fixed top-0 left-0 w-full h-full -z-10"
></canvas>

<style>
  :root {
    /* light mode */
    --particle-color: 0, 0, 0; /* black dots */
  }

  :root.dark {
    /* dark mode */
    --particle-color: 255, 255, 255; /* white dots */
  }

  canvas {
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
  }
</style>

<script>
  if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      const canvasEl = document.getElementById("particles-canvas");
      if (!canvasEl) return;

      const ctx = canvasEl.getContext("2d");
      if (!ctx) return;

      // ---- THEME-AWARE COLOR ----
      function getParticleColor() {
        const root = document.documentElement;
        const styles = getComputedStyle(root);
        // returns "0, 0, 0" or "255, 255, 255"
        return styles.getPropertyValue("--particle-color").trim();
      }
      let currentParticleColor = getParticleColor();

      // watch for changes in <html class="dark">
      const observer = new MutationObserver(() => {
        currentParticleColor = getParticleColor();
      });
      observer.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ["class"],
      });

      // ---- CONFIG ----
      const PARTICLE_MIN_RADIUS = 0.5;
      const PARTICLE_MAX_RADIUS = 2.0;
      const BASE_DRIFT_SPEED = 0.5;
      const MOUSE_RADIUS = 120;
      const MOUSE_REPULSION = 1.5;
      const SCROLL_INFLUENCE = 0.5;
      const SCROLL_DECAY = 0.9;
      const MAX_SCROLL_VELOCITY = 40;

      function getParticleCount() {
        const w = window.innerWidth;
        const h = window.innerHeight;
        const area = w * h;

        if (w < 600) return 35;
        if (w < 1024) return 70;
        return Math.min(140, Math.floor(area / 15000));
      }

      const canvas = canvasEl;
      const context = ctx;
      const particles = [];

      const mouse = {
        x: 0,
        y: 0,
        active: false,
      };

      let scrollVelocity = 0;
      let lastScrollY = window.scrollY;

      class Particle {
        constructor() {
          this.x = Math.random() * canvas.width;
          this.y = Math.random() * canvas.height;
          this.radius =
            Math.random() * (PARTICLE_MAX_RADIUS - PARTICLE_MIN_RADIUS) +
            PARTICLE_MIN_RADIUS;
          this.speedX = (Math.random() - 0.5) * BASE_DRIFT_SPEED;
          this.speedY = (Math.random() - 0.5) * BASE_DRIFT_SPEED;
          this.alpha = Math.random() * 0.4 + 0.2;
        }

        update(scrollPush) {
          this.x += this.speedX;
          this.y += this.speedY;

          const sizeFactor = PARTICLE_MAX_RADIUS / this.radius;
          this.y += scrollPush * sizeFactor;

          if (mouse.active) {
            const dx = this.x - mouse.x;
            const dy = this.y - mouse.y;
            const dist = Math.sqrt(dx * dx + dy * dy);

            if (dist > 0 && dist < MOUSE_RADIUS) {
              const forceDirX = dx / dist;
              const forceDirY = dy / dist;
              const force = (MOUSE_RADIUS - dist) / MOUSE_RADIUS;

              this.x += forceDirX * force * MOUSE_REPULSION;
              this.y += forceDirY * force * MOUSE_REPULSION;
            }
          }

          // bounce
          if (this.x - this.radius < 0) {
            this.x = this.radius;
            this.speedX *= -1;
          } else if (this.x + this.radius > canvas.width) {
            this.x = canvas.width - this.radius;
            this.speedX *= -1;
          }

          if (this.y - this.radius < 0) {
            this.y = this.radius;
            this.speedY *= -1;
          } else if (this.y + this.radius > canvas.height) {
            this.y = canvas.height - this.radius;
            this.speedY *= -1;
          }
        }

        draw() {
          context.beginPath();
          context.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
          // use the theme color here ðŸ‘‡
          context.fillStyle = `rgba(${currentParticleColor}, ${this.alpha})`;
          context.fill();
        }
      }

      function resizeCanvas() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      }
      window.addEventListener("resize", () => {
        resizeCanvas();
        syncParticlesWithTarget();
      });
      resizeCanvas();

      // mouse
      window.addEventListener("mousemove", (e) => {
        mouse.x = e.clientX;
        mouse.y = e.clientY;
        mouse.active = true;
      });
      window.addEventListener("mouseleave", () => {
        mouse.active = false;
      });

      // scroll
      window.addEventListener("scroll", () => {
        const currentY = window.scrollY;
        const delta = currentY - lastScrollY;
        lastScrollY = currentY;

        let impulse = -delta;

        if (impulse > MAX_SCROLL_VELOCITY) impulse = MAX_SCROLL_VELOCITY;
        if (impulse < -MAX_SCROLL_VELOCITY) impulse = -MAX_SCROLL_VELOCITY;

        scrollVelocity += impulse;
      });

      function syncParticlesWithTarget() {
        const target = getParticleCount();
        const current = particles.length;

        if (current < target) {
          for (let i = current; i < target; i++) {
            particles.push(new Particle());
          }
        } else if (current > target) {
          particles.splice(target, current - target);
        }
      }

      syncParticlesWithTarget();

      function animate() {
        context.clearRect(0, 0, canvas.width, canvas.height);

        scrollVelocity *= SCROLL_DECAY;
        const scrollPushPerFrame = (scrollVelocity / 100) * SCROLL_INFLUENCE;

        for (const p of particles) {
          p.update(scrollPushPerFrame);
          p.draw();
        }

        requestAnimationFrame(animate);
      }

      animate();
    });
  }
</script>
