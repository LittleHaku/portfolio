---
const { href } = Astro.props;
const isExternal = typeof href === "string" && /^https?:\/\//.test(href);
---

<a
  href={href}
  target={isExternal ? "_blank" : undefined}
  rel={isExternal ? "noopener noreferrer" : undefined}
  role="link"
  class="inline-flex items-center gap-1 underline underline-offset-2 decoration-1
        text-zinc-800 decoration-zinc-400
        dark:text-zinc-200 dark:decoration-zinc-600
        hover:text-black hover:decoration-black
        dark:hover:text-white dark:hover:decoration-white
        transition-colors duration-200 ease-in-out"
>
  <slot />
</a>
